<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>Controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFoodListServlet</servlet-name>
        <servlet-class>Controller.GetFoodListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>Controller.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMenuFoodServlet</servlet-name>
        <servlet-class>Controller.GetMenuFoodServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyFoodServlet</servlet-name>
        <servlet-class>Controller.BuyFoodServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadCartServlet</servlet-name>
        <servlet-class>Controller.LoadCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCartServlet</servlet-name>
        <servlet-class>Controller.GetCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertNewMenuServlet</servlet-name>
        <servlet-class>Controller.InsertNewMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFoodListServlet</servlet-name>
        <url-pattern>/GetFoodListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMenuFoodServlet</servlet-name>
        <url-pattern>/GetMenuFoodServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyFoodServlet</servlet-name>
        <url-pattern>/BuyFoodServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadCartServlet</servlet-name>
        <url-pattern>/LoadCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCartServlet</servlet-name>
        <url-pattern>/GetCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertNewMenuServlet</servlet-name>
        <url-pattern>/InsertNewMenuServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
</web-app>
